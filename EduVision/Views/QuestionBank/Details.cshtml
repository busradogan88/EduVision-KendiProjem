@model List<EduVision.Models.Question>

@{
    // Başlık Controller'dan geliyor (Örn: TYT - Matematik Soruları)
}

<div class="dashboard-container" style="padding: 20px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 style="color: #2c3e50;">@ViewData["Title"]</h1>
            <p class="text-muted">Toplam @Model.Count soru listeleniyor.</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            &larr; Soru Bankalarına Dön
        </a>
    </div>

    <div class="questions-list">
        @if (Model.Count == 0)
        {
            <div class="alert alert-warning">
                Bu kategoride henüz soru bulunmamaktadır.
            </div>
        }
        else
        {
            int sayac = 1;
            @foreach (var soru in Model)
            {
                <div class="card mb-4 shadow-sm" style="border-radius: 10px; border: none;">
                    <div class="card-header bg-white">
                        <span class="badge bg-primary">Soru @sayac</span>
                        <span class="badge bg-light text-dark">Zorluk: @soru.DifficultyLevel</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title p-2">@soru.QuestionText</h5>

                        <div class="list-group list-group-flush mt-3" id="options-@soru.QuestionId">
                            <button type="button" class="list-group-item list-group-item-action option-btn" onclick="checkAnswer(this, '@soru.QuestionId', 'A', '@soru.CorrectAnswer')">
                                <b>A)</b> @soru.OptionA
                            </button>
                            <button type="button" class="list-group-item list-group-item-action option-btn" onclick="checkAnswer(this, '@soru.QuestionId', 'B', '@soru.CorrectAnswer')">
                                <b>B)</b> @soru.OptionB
                            </button>
                            <button type="button" class="list-group-item list-group-item-action option-btn" onclick="checkAnswer(this, '@soru.QuestionId', 'C', '@soru.CorrectAnswer')">
                                <b>C)</b> @soru.OptionC
                            </button>
                            <button type="button" class="list-group-item list-group-item-action option-btn" onclick="checkAnswer(this, '@soru.QuestionId', 'D', '@soru.CorrectAnswer')">
                                <b>D)</b> @soru.OptionD
                            </button>
                            <button type="button" class="list-group-item list-group-item-action option-btn" onclick="checkAnswer(this, '@soru.QuestionId', 'E', '@soru.CorrectAnswer')">
                                <b>E)</b> @soru.OptionE
                            </button>
                        </div>

                        <div class="mt-3 text-end">
                            <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="collapse" data-bs-target="#answer-@soru.QuestionId">
                                Cevabı Göster
                            </button>
                        </div>

                        <div class="collapse mt-2" id="answer-@soru.QuestionId">
                            <div class="card card-body bg-light text-success fw-bold">
                                Doğru Cevap: @soru.CorrectAnswer
                            </div>
                        </div>
                    </div>
                </div>
                sayac++;
            }
        }
    </div>
</div>

<script>
    function checkAnswer(btn, questionId, selectedOption, correctOption) {
        // O sorudaki tüm butonların rengini sıfırla
        var parentDiv = document.getElementById('options-' + questionId);
        var buttons = parentDiv.getElementsByClassName('option-btn');
        for (var i = 0; i < buttons.length; i++) {
            buttons[i].classList.remove('bg-success', 'bg-danger', 'text-white');
        }

        // Doğru mu Yanlış mı kontrol et
        if (selectedOption === correctOption) {
            btn.classList.add('bg-success', 'text-white'); // Doğruysa Yeşil
        } else {
            btn.classList.add('bg-danger', 'text-white'); // Yanlışsa Kırmızı
        }
    }
</script>